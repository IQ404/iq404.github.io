---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const projects = await getCollection("projects");
const sortedProjects = projects.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

const publications = sortedProjects.filter((p) => p.data.type === "publication");
const softwareProjects = sortedProjects.filter((p) => p.data.type === "software-project");

// Get all unique tags
const allTags = [...new Set(sortedProjects.flatMap((project) => project.data.tags || []))];
---

<Layout title="Projects - IQ404" description="Research work, publications, and side projects">
  <div class="container">
    <header class="page-header fade-in">
      <h1>Projects</h1>
      <p>Research work and software projects I've worked on.</p>
    </header>

    {allTags.length > 0 && (
      <div class="tags-filter">
        <span class="filter-label">Filter by tag:</span>
        <div class="tags-buttons">
          <button class="filter-tag active" data-tag="all">All</button>
          {allTags.map((tag) => (
            <button class="filter-tag" data-tag={tag}>{tag}</button>
          ))}
        </div>
      </div>
    )}

    <section class="publications-section">
      <h2>Publications</h2>
      <div class="projects-grid">
        {publications.map((project) => (
          <a href={`/projects/${project.id}`} class="project-card" data-tags={JSON.stringify(project.data.tags || [])}>
            <h3>{project.data.title}</h3>
            <p>{project.data.description}</p>
            <div class="project-meta">
              <time datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                })}
              </time>
              {project.data.tags && (
                <div class="tags">
                  {project.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
      {publications.length === 0 && (
        <p class="empty-state">No publications yet. Check back soon!</p>
      )}
    </section>

    <section class="software-section">
      <h2>Software Projects</h2>
      <div class="projects-grid">
        {softwareProjects.map((project) => (
          <a href={project.data.github || project.data.link || `/projects/${project.id}`} class="project-card" data-tags={JSON.stringify(project.data.tags || [])} target={project.data.github || project.data.link ? "_blank" : undefined} rel={project.data.github || project.data.link ? "noopener noreferrer" : undefined}>
            <h3>{project.data.title}</h3>
            <p>{project.data.description}</p>
            <div class="project-meta">
              <time datetime={project.data.date.toISOString()}>
                {project.data.date.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                })}
              </time>
              {project.data.tags && (
                <div class="tags">
                  {project.data.tags.map((tag) => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        ))}
      </div>
      {softwareProjects.length === 0 && (
        <p class="empty-state">No software projects yet. Check back soon!</p>
      )}
    </section>
  </div>
</Layout>

<script>
  const tagButtons = document.querySelectorAll('.filter-tag');
  const projectCards = document.querySelectorAll('.project-card');
  const projectSections = document.querySelectorAll('.publications-section, .software-section');

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');

      // Update active state
      tagButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter projects
      projectCards.forEach(card => {
        const cardTags = JSON.parse(card.getAttribute('data-tags') || '[]');

        if (selectedTag === 'all' || cardTags.includes(selectedTag)) {
          (card as HTMLElement).style.display = 'flex';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });

      // Hide sections with no visible cards (but show all sections when "All" is selected)
      projectSections.forEach(section => {
        if (selectedTag === 'all') {
          (section as HTMLElement).style.display = 'block';
        } else {
          const visibleCards = section.querySelectorAll('.project-card:not([style*="display: none"])');
          if (visibleCards.length === 0) {
            (section as HTMLElement).style.display = 'none';
          } else {
            (section as HTMLElement).style.display = 'block';
          }
        }
      });
    });
  });
</script>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    font-size: 1.125rem;
    color: var(--text-muted);
  }

  .tags-filter {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .filter-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-right: 1rem;
  }

  .tags-buttons {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .filter-tag {
    font-size: 0.8rem;
    padding: 0.375rem 0.875rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 9999px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition);
  }

  .filter-tag:hover {
    border-color: var(--accent);
    color: var(--text-primary);
  }

  .filter-tag.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .publications-section,
  .software-section {
    margin-bottom: 3rem;
  }

  .publications-section h2,
  .software-section h2 {
    font-size: 1.25rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: 1.5rem;
  }

  .project-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    text-decoration: none;
    transition: all var(--transition);
    display: flex;
    flex-direction: column;
  }

  .project-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .project-card h3 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .project-card p {
    font-size: 0.95rem;
    color: var(--text-secondary);
    flex-grow: 1;
    margin-bottom: 1rem;
  }

  .project-meta {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .project-meta time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .tag {
    font-size: 0.75rem;
    padding: 0.25rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
  }

  .empty-state {
    text-align: center;
    color: var(--text-muted);
    padding: 3rem;
  }

  @media (max-width: 640px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
