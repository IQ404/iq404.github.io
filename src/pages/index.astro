<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 4rem;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-avatar {
    margin-bottom: 2rem;
  }

  .avatar-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 15%;
    margin: 0 auto;
    display: block;
    border: 3px solid var(--accent);
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.3);
  }

  .hero-title {
    font-size: 2.75rem;
    margin-bottom: 0.5rem;
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .about {
    margin-bottom: 4rem;
  }

  .about h2 {
    margin-bottom: 1.5rem;
  }

  .about-content {
    max-width: 100%;
  }

  .about-current {
    margin-bottom: 2rem;
  }

  .about-current .status {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .interests {
    color: var(--text-secondary);
  }

  .interests ul {
    margin: 0;
    padding-left: 1.25rem;
    list-style-type: disc;
  }

  .interests li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .interests li:last-child {
    margin-bottom: 0;
  }

  .education h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .education-list {
    list-style: none;
    padding: 0;
  }

  .education-list li {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .education-list li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: var(--accent);
  }

  .education-list a {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color var(--transition);
  }

  .education-list a:hover {
    border-bottom-color: var(--accent);
  }

  .strikethrough {
    text-decoration: line-through;
    color: var(--text-muted) !important;
  }

  .contact h2 {
    margin-bottom: 1.5rem;
  }

  .contact-links {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .contact-link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.75rem 1.25rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-md);
    color: var(--text-secondary);
    text-decoration: none;
    transition: all var(--transition);
  }

  .contact-link:hover {
    border-color: var(--accent);
    color: var(--text-primary);
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
  }

  .contact-icon {
    width: 20px;
    height: 20px;
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero {
      padding: 2rem 0;
    }
  }
</style>
