---
import Layout from "../layouts/Layout.astro";
---

<Layout title="IQ404 - Home" description="Personal website and portfolio">
  <div class="container">
    <section class="hero fade-in">
      <div class="hero-content">
        <div class="hero-avatar">
          <img src="/avatar.jpg" alt="Avatar" class="avatar-image" />
        </div>
        <h1 class="hero-title">Hello, I'm <span class="highlight">IQ404</span></h1>
        <p class="hero-subtitle">
          PhD Researcher | Software Developer | Curious Mind
        </p>
        <p class="hero-description">
          Welcome to my corner of the internet. I explore ideas at the intersection of
          mathematics, computer science, and whatever catches my curiosity.
        </p>
        <div class="hero-links">
          <a href="/projects" class="btn btn-primary">View Projects</a>
          <a href="/blog" class="btn btn-secondary">Read Blog</a>
        </div>
      </div>
    </section>

    <section class="about">
      <h2>About Me</h2>
      <div class="about-content">
        <p>
          I'm currently pursuing my PhD, focusing on [Your Research Area].
          Previously, I completed my Master's degree where I worked on various
          projects spanning [Your Interests].
        </p>
        <p>
          When I'm not buried in research papers, you'll find me writing code,
          exploring new mathematical concepts, or documenting my learnings on this site.
        </p>
      </div>
    </section>

    <section class="highlights">
      <h2>Quick Links</h2>
      <div class="highlight-grid">
        <a href="/projects" class="highlight-card">
          <div class="highlight-icon">&#128640;</div>
          <h3>Projects</h3>
          <p>Research work, publications, and side projects</p>
        </a>
        <a href="/blog" class="highlight-card">
          <div class="highlight-icon">&#128221;</div>
          <h3>Blog</h3>
          <p>Notes, tutorials, and thoughts on various topics</p>
        </a>
        <a href="/resources" class="highlight-card">
          <div class="highlight-icon">&#128279;</div>
          <h3>Resources</h3>
          <p>Curated links and tools I find valuable</p>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 4rem;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-avatar {
    margin-bottom: 2rem;
  }

  .avatar-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    margin: 0 auto;
    display: block;
    border: 3px solid var(--accent);
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.3);
  }

  .hero-title {
    font-size: 2.75rem;
    margin-bottom: 0.5rem;
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-bottom: 2rem;
  }

  .hero-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    padding: 0.75rem 1.5rem;
    border-radius: var(--radius-md);
    font-weight: 500;
    font-size: 0.95rem;
    transition: all var(--transition);
  }

  .btn-primary {
    background: var(--accent);
    color: white;
  }

  .btn-primary:hover {
    background: var(--accent-hover);
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(59, 130, 246, 0.4);
  }

  .btn-secondary {
    background: var(--bg-tertiary);
    color: var(--text-primary);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    background: var(--bg-hover);
    border-color: var(--border-hover);
    transform: translateY(-2px);
  }

  .about {
    margin-bottom: 4rem;
  }

  .about h2 {
    margin-bottom: 1.5rem;
  }

  .about-content {
    max-width: 65ch;
  }

  .about-content p {
    margin-bottom: 1rem;
    color: var(--text-secondary);
    line-height: 1.8;
  }

  .highlights h2 {
    margin-bottom: 1.5rem;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .highlight-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all var(--transition);
    text-decoration: none;
  }

  .highlight-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .highlight-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .highlight-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .highlight-card p {
    font-size: 0.95rem;
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero {
      padding: 2rem 0;
    }
  }
</style>
