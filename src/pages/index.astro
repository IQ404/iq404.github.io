---
import Layout from "../layouts/Layout.astro";
---

<Layout title="IQ404 - Home" description="Personal website and portfolio">
  <div class="container">
    <section class="hero fade-in">
      <div class="hero-content">
        <div class="hero-avatar">
          <img src="/avatar.jpg" alt="Avatar" class="avatar-image" />
        </div>
        <h1 class="hero-title">Hello, I'm <span class="highlight">Xiaoyang Liu</span></h1>
        <p class="hero-subtitle">
          PhD Student
        </p>
        <p class="hero-description">
          Welcome to my corner of the internet!
        </p>
      </div>
    </section>

    <section class="about">
      <h2>About Me</h2>
      <div class="about-content">
        <div class="about-current">
          <p class="status">PhD Student in Computer Science</p>
          <div class="interests">
            <span class="interests-label">Research Interests:</span>
            <ul>
              <li>LLM-based AI Agents: Simulation & Planning</li>
              <li>Inference, Decoding, Verification & Search algorithms for enhancing Language Models' reasoning capabilities</li>
            </ul>
          </div>
        </div>

        <div class="education">
          <h3>Education</h3>
          <ul class="education-list">
            <li>
              <a href="https://www.ncl.ac.uk/postgraduate/degrees/5152f/" target="_blank" rel="noopener">MSc Computer Game Engineering</a>, Newcastle University
            </li>
            <li class="strikethrough">
              Bachelor of Science and Bachelor of Advanced Studies (Advanced) in Mathematics and Statistics, University of Sydney
            </li>
            <li>
              BSc Physics, UCL
            </li>
          </ul>
        </div>
      </div>
    </section>

    <section class="highlights">
      <h2>Quick Links</h2>
      <div class="highlight-grid">
        <a href="/projects" class="highlight-card">
          <div class="highlight-icon">&#128640;</div>
          <h3>Projects</h3>
          <p>Research work, publications, and side projects</p>
        </a>
        <a href="/blog" class="highlight-card">
          <div class="highlight-icon">&#128221;</div>
          <h3>Blog</h3>
          <p>Notes, tutorials, and thoughts on various topics</p>
        </a>
        <a href="/resources" class="highlight-card">
          <div class="highlight-icon">&#128279;</div>
          <h3>Resources</h3>
          <p>Curated links and tools I find valuable</p>
        </a>
      </div>
    </section>
  </div>
</Layout>

<style>
  .hero {
    text-align: center;
    padding: 4rem 0;
    border-bottom: 1px solid var(--border);
    margin-bottom: 4rem;
  }

  .hero-content {
    max-width: 600px;
    margin: 0 auto;
  }

  .hero-avatar {
    margin-bottom: 2rem;
  }

  .avatar-image {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    object-position: center 15%;
    margin: 0 auto;
    display: block;
    border: 3px solid var(--accent);
    box-shadow: 0 0 40px rgba(59, 130, 246, 0.3);
  }

  .hero-title {
    font-size: 2.75rem;
    margin-bottom: 0.5rem;
  }

  .highlight {
    background: linear-gradient(135deg, var(--accent), #8b5cf6);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--text-muted);
    margin-bottom: 1.5rem;
  }

  .hero-description {
    font-size: 1.125rem;
    color: var(--text-secondary);
  }

  .about {
    margin-bottom: 4rem;
  }

  .about h2 {
    margin-bottom: 1.5rem;
  }

  .about-content {
    max-width: 65ch;
  }

  .about-current {
    margin-bottom: 2rem;
  }

  .about-current .status {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }

  .interests {
    color: var(--text-secondary);
  }

  .interests-label {
    font-weight: 500;
    color: var(--text-primary);
  }

  .interests ul {
    margin-top: 0.5rem;
    padding-left: 1.25rem;
    list-style-type: disc;
  }

  .interests li {
    margin-bottom: 0.5rem;
    line-height: 1.6;
  }

  .education h3 {
    font-size: 1.1rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
  }

  .education-list {
    list-style: none;
    padding: 0;
  }

  .education-list li {
    position: relative;
    padding-left: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--text-secondary);
    line-height: 1.6;
  }

  .education-list li::before {
    content: "â†’";
    position: absolute;
    left: 0;
    color: var(--accent);
  }

  .education-list a {
    color: var(--accent);
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color var(--transition);
  }

  .education-list a:hover {
    border-bottom-color: var(--accent);
  }

  .strikethrough {
    text-decoration: line-through;
    color: var(--text-muted) !important;
  }

  .highlights h2 {
    margin-bottom: 1.5rem;
  }

  .highlight-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
  }

  .highlight-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    padding: 1.5rem;
    transition: all var(--transition);
    text-decoration: none;
  }

  .highlight-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .highlight-icon {
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .highlight-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.5rem;
    color: var(--text-primary);
  }

  .highlight-card p {
    font-size: 0.95rem;
    color: var(--text-muted);
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero {
      padding: 2rem 0;
    }
  }
</style>
