---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("notes", ({ data }) => !data.draft);
const sortedPosts = posts.sort(
  (a, b) => b.data.date.valueOf() - a.data.date.valueOf()
);

// Get all unique tags
const allTags = [...new Set(posts.flatMap((post) => post.data.tags || []))];
---

<Layout title="Notes - IQ404" description="Notes, tutorials, and thoughts">
  <div class="container">
    <header class="page-header fade-in">
      <h1>Notes</h1>
      <p>My thoughts on mathematics, computer science, and more.</p>
    </header>

    {allTags.length > 0 && (
      <div class="tags-filter">
        <span class="filter-label">Filter by tag:</span>
        <div class="tags">
          <button class="tag active" data-tag="all">All</button>
          {allTags.map((tag) => (
            <button class="tag" data-tag={tag}>{tag}</button>
          ))}
        </div>
      </div>
    )}

    <div class="posts-list">
      {sortedPosts.map((post) => (
        <article class="post-card" data-tags={JSON.stringify(post.data.tags || [])}>
          <a href={`/notes/${post.id}`} class="post-link">
            <div class="post-date">
              <time datetime={post.data.date.toISOString()}>
                {post.data.date.toLocaleDateString("en-US", {
                  year: "numeric",
                  month: "short",
                  day: "numeric",
                })}
              </time>
            </div>
            <div class="post-content">
              <h2>{post.data.title}</h2>
              <p>{post.data.description}</p>
              {post.data.tags && (
                <div class="post-tags">
                  {post.data.tags.map((tag) => (
                    <span class="post-tag">{tag}</span>
                  ))}
                </div>
              )}
            </div>
          </a>
        </article>
      ))}

      {sortedPosts.length === 0 && (
        <p class="empty-state">No posts yet. Check back soon!</p>
      )}
    </div>
  </div>
</Layout>

<script>
  const tagButtons = document.querySelectorAll('.tag');
  const postCards = document.querySelectorAll('.post-card');

  tagButtons.forEach(button => {
    button.addEventListener('click', () => {
      const selectedTag = button.getAttribute('data-tag');

      // Update active state
      tagButtons.forEach(btn => btn.classList.remove('active'));
      button.classList.add('active');

      // Filter posts
      postCards.forEach(card => {
        const postTags = JSON.parse(card.getAttribute('data-tags') || '[]');

        if (selectedTag === 'all' || postTags.includes(selectedTag)) {
          (card as HTMLElement).style.display = 'block';
        } else {
          (card as HTMLElement).style.display = 'none';
        }
      });
    });
  });
</script>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .page-header h1 {
    margin-bottom: 0.5rem;
  }

  .page-header p {
    font-size: 1.125rem;
    color: var(--text-muted);
  }

  .tags-filter {
    margin-bottom: 2rem;
    padding-bottom: 1.5rem;
    border-bottom: 1px solid var(--border);
  }

  .filter-label {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin-right: 1rem;
  }

  .tags {
    display: inline-flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-top: 0.75rem;
  }

  .tags .tag {
    font-size: 0.8rem;
    padding: 0.375rem 0.875rem;
    background: var(--bg-tertiary);
    border: 1px solid var(--border);
    border-radius: 9999px;
    color: var(--text-secondary);
    cursor: pointer;
    transition: all var(--transition);
  }

  .tags .tag:hover {
    border-color: var(--accent);
    color: var(--text-primary);
  }

  .tags .tag.active {
    background: var(--accent);
    border-color: var(--accent);
    color: white;
  }

  .posts-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .post-card {
    border-radius: var(--radius-lg);
    transition: all var(--transition);
  }

  .post-link {
    display: flex;
    gap: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    text-decoration: none;
    transition: all var(--transition);
  }

  .post-link:hover {
    border-color: var(--accent);
    transform: translateX(4px);
  }

  .post-date {
    flex-shrink: 0;
    width: 100px;
  }

  .post-date time {
    font-size: 0.875rem;
    color: var(--text-muted);
  }

  .post-content {
    flex-grow: 1;
  }

  .post-content h2 {
    font-size: 1.25rem;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
  }

  .post-content p {
    font-size: 0.95rem;
    color: var(--text-secondary);
    margin-bottom: 0.75rem;
  }

  .post-tags {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .post-tag {
    font-size: 0.75rem;
    padding: 0.2rem 0.5rem;
    background: var(--bg-tertiary);
    border-radius: var(--radius-sm);
    color: var(--text-muted);
  }

  .empty-state {
    text-align: center;
    color: var(--text-muted);
    padding: 3rem;
  }

  @media (max-width: 640px) {
    .post-link {
      flex-direction: column;
      gap: 0.5rem;
    }

    .post-date {
      width: auto;
    }
  }
</style>
